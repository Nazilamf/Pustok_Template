
@model List<Author>

@{
    ViewData["Title"] = "Index";
    int dataorder = 0;
}


<h1>Authors <a asp-controller="author" asp-action="create" ><button class="btn-outline-secondary">Create</button></a></h1> 
<container>
    <row justify-content-center>
        <col-md-8>
        <table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">FullName</th>
      <th scope="col">Count</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
   @foreach (var item in Model)
                    {
                        dataorder++;
                        <tr>
          <th scope="row">@dataorder</th>
          <td>@item.FullName</td>
          <td>@item.Books.Count</td>
                  <td> <a class="btn-success" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                         <a class="btn-danger">Delete</a></td>
        </tr>
                    }

  </tbody>
</table>
        </col-md-8>
    </row>
</container>
